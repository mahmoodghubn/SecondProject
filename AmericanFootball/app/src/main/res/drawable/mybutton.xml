<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/radius" />
            <stroke android:width="@dimen/width"
                android:color="@color/stroke" />
            <gradient android:angle="@dimen/angle"
                android:startColor="@color/startColor1"
                android:endColor="@color/endColor1"  />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                android:color="@color/stroke" />
            <gradient android:angle="@dimen/angle"
                android:startColor="@color/startColor2"
                android:endColor="@color/endColor2" />
        </shape>
    </item>
</selector>